<%= turbo_frame_tag "players" do %>
  <h2 class="title is-4">Deck list for <%= @player.name %></h2>

  <%= form_with method: :patch, url: update_decklist_tournament_player_path(@player) do |f| %>

    <div class="field is-grouped">
      <div class="control">
        <%= f.button "Update", type: "submit", class: "button is-link is-small" %>
      </div>
      <div class="control">
        <%= f.button "Back", type: "submit", name: "cancel", value: true,
                     class: "button is-small is-link is-light" %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.text_area :decklist, class: "textarea is-info",
                        placeholder: "No decklist submitted yet",
                        rows: 15, value: @player.decklist %>
      </div>
    </div>

  <% end %>
<% end %>
