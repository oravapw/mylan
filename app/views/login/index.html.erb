<div class="columns mt-5" data-turbo="false">
  <div class="column"></div>
  <div class="column">
    <%= form_with url: authenticate_path, method: :post do |f| %>

      <div class="field">
        <%= f.label :username, "Username:", class: "label" %>
        <div class="control">
          <%= f.text_field :username, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, "Password:", class: "label" %>
        <div class="control">
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>

      <div class="control">
        <%= f.button "Login", type: "submit", class: "button is-link" %>
      </div>

      <template data-controller="grab-focus" data-grab-focus-selector-value="#username"></template>
    <% end %>
  </div>
  <div class="column"></div>
</div>
